@model IEnumerable<Expense>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-black-50">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-outline-primary">Create new Expense</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th><label asp-for="@Model.FirstOrDefault().Name"></label></th>
                    <th><label asp-for="@Model.FirstOrDefault().Amount"></label></th>
                    <th><label>Expense Type</label></th>
                    <th><label>Changes</label></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th width="25%">@item.Name</th>
                    <th width="25%">@item.Amount</th>
                    <th width="25%">@item.ExpenseType.Name</th>
                    <th width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Expense" asp-action="Update" asp-route-id="@item.Id" class="btn btn-dark mx-1">Update</a>
                            <a asp-controller="Expense" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </th>
                </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }
</div>



