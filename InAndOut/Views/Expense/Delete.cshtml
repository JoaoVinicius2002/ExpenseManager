
@model Expense
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Expense</h2>
        </div>
        <row class="col-12">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-4">
                    <label asp-for="Amount"></label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <input class="w-100" disabled asp-for="Name" />
                </div>
                <div class="col-4">
                    <input class="w-100" disabled asp-for="Amount" />
                </div>
            </div>
            <div class="col-6 offset-1 row">
                <div class="col">
                    <input type="submit" class="btn btn-danger w-75" value="Delete" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success w-75">Back</a>
                </div>
            </div>
        </row>
    </div>
</form>