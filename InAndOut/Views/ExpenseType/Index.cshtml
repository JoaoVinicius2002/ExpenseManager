@model IEnumerable<ExpenseType>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Expense Types List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-controller="ExpenseType" class="btn btn-outline-primary">Create a new Expense Type</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
            <th><label>Expense Type Name</label></th>
            </thead>
            @foreach (var expenseType in Model)
            {
                <tbody>
                <th class="text-left" width="25%">@expenseType.Name</th>
                <th class="text-center" width="25%">
                    <div class="w-100 btn-group" role="group">
                        <a asp-action="Update" asp-controller="ExpenseType" asp-route-id="@expenseType.Id" class="btn btn-dark mx-1">Update</a>
                        <a asp-action="Delete" asp-controller="ExpenseType" asp-route-id="@expenseType.Id" class="btn btn-danger mx-1">Delete</a>
                    </div>
                </th>
                </tbody>
            }
        </table>
    }
</div>