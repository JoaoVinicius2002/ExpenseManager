@model ExpenseType
<form method="post" asp-action="Create">
    <div class="p-3">
        <div class="row">
            <h2>Create a new Expense Type</h2>
        </div>
        <row class="col-md-12">
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Name"></label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <input asp-for="Name" />
                </div>
            </div>
            <div class="col-6">
                <button type="submit" value="Create" class="btn btn-outline-success">Create</button>
                <a asp-action="Index" asp-controller="ExpenseType" class="btn btn-outline-info">Expense Types List</a>
            </div>
        </row>
    </div>
</form>

